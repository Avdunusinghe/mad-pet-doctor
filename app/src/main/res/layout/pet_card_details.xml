            android:background="#aaaaaa"
            android:padding="5dp">

            <TextView
                android:id="@+id/tablecoloum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:shadowColor="#B69191"
                android:text="ID"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tablecoloum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="PET NAME"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tablecoloum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="OWNER NAME"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tablecoloum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:background="#ffffff"
            android:padding="5dp">

            <TextView
                android:id="@+id/petIdColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
