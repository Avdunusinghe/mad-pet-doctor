                android:text="1" />

            <TextView
                android:id="@+id/PetNameColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:text="Blacky" />

            <TextView
                android:id="@+id/OwnerNameColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
