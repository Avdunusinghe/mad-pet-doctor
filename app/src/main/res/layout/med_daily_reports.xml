<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedCenterDailyReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip9"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:background="#000000"
        app:chipBackgroundColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip13"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:background="#000000"
        app:chipBackgroundColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView55"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/pet_doc_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pet_doc_2" />

    <ImageView
        android:id="@+id/usericon"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/user_icon"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toEndOf="@+id/imageView55"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/usernameid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="JGACH"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.768"
        app:layout_constraintStart_toEndOf="@+id/imageView55"
        app:layout_constraintTop_toBottomOf="@+id/usericon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal"
        android:text="Daily Reports"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:background="@color/BurlyWood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.061">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="9dp"
            android:text="Calculate Daily Income"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_doc"
            android:layout_width="145dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-270dp"
            android:layout_marginLeft="-270dp"
            android:layout_marginTop="106dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:contentDescription="@string/book_doc"
            android:fontFamily="sans-serif-black"
            android:text="Total Patients"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/book_doc5"
            android:layout_width="116dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-268dp"
            android:layout_marginLeft="-268dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:contentDescription="@string/book_doc"
            android:fontFamily="sans-serif-black"
            android:text="Date"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/book_doc2"
            android:layout_width="137dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-270dp"
            android:layout_marginLeft="-270dp"
            android:layout_marginTop="157dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:contentDescription="@string/book_doc2"
            android:fontFamily="sans-serif-black"
            android:text="Charge per appointment"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.011" />

        <TextView
            android:id="@+id/book_doc16"
            android:layout_width="134dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-260dp"
            android:layout_marginLeft="-260dp"
            android:layout_marginTop="236dp"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:contentDescription="@string/book_doc2"
            android:fontFamily="sans-serif-black"
            android:onClick="calculateBtn"
            android:text="Total Fee"
            android:textColor="#000000"
            app:layout_constraintHorizontal_bias="0.011" />

        <Button
            android:id="@+id/confirm3"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:layout_marginEnd="84dp"
            android:layout_marginRight="84dp"
            android:layout_marginBottom="71dp"
            android:onClick="calculateBtn"
            android:text="Calculate"
            app:backgroundTint="#4B66FB" />

        <EditText
            android:id="@+id/totalPatient"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="106dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toEndOf="@+id/book_doc"
            android:layout_toRightOf="@+id/book_doc"
            android:ems="10"
            android:hint="Patients"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/totalPatient2"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_toEndOf="@+id/book_doc"
            android:layout_toRightOf="@+id/book_doc"
            android:ems="10"
            android:hint="Date"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/drCharge"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="153dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/book_doc2"
            android:layout_toRightOf="@+id/book_doc2"
            android:ems="10"
            android:hint="Fee"
            android:inputType="number"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalFee"
            android:layout_width="132dp"
            android:layout_height="35dp"
            android:layout_below="@+id/drCharge"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="166dp"
            android:text="Result"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip13"
        app:srcCompat="@drawable/hospital" />


</androidx.constraintlayout.widget.ConstraintLayout>