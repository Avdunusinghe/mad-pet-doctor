<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_gravity="center"
    android:layout_margin="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/BurlyWood"
        >

        <TableRow
            android:id="@+id/idtableSchedule"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#CEC6D5DB"
            android:padding="10dp">


            <TextView
                android:id="@+id/apptable26"
                android:layout_width="80dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/apptable27"
                android:layout_width="85dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                android:id="@+id/apptable28"
                android:layout_width="97dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="" />

            <ImageButton
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/DocID01"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/confirm"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/ignore"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/DocID01"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/ignore"
                tools:ignore="VectorDrawableCompat" />

        </TableRow>





    </RelativeLayout>


</androidx.cardview.widget.CardView>
