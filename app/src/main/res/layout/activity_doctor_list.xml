        android:layout_width="400dp"
        android:layout_height="393dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="100dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docltorListText"
        app:layout_constraintVertical_bias="1.0">

        <TableRow

            android:padding="20dp">

            <TextView
                android:id="@+id/medicalCenterId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:shadowColor="#B69191"
                android:text="@string/userId"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medicalCentercolName"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/doctorcolName"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/medicalcenterColEmail"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/doctorColEmail"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userColAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userColAction"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="374dp"
            android:layout_height="57dp"

            android:padding="15dp">

            <TextView
                android:id="@+id/userRecordId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userRecordId"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/userRecordName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userRecordName"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/userRecordEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doctor1@gmail.com"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <ImageView
                android:id="@+id/deletebtn1"
                android:layout_width="39dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/delete_btn" />

        </TableRow>

        <TableRow

            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
