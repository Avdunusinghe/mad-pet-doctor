<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/PetCardHeading"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/vaccine_report"
        android:text="PET CARD DETAILS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <ImageView
        android:id="@+id/PetCardImage"
        android:layout_width="113dp"
        android:layout_height="67dp"
        android:contentDescription="@string/petcarddetailsimage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetCardHeading"
        app:srcCompat="@drawable/icons8_report_64" />

    <SearchView
        android:id="@+id/SearchBar"
        android:layout_width="370dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="#858383"
        android:contentDescription="@string/petcarddetailssearchbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetCardImage" />

