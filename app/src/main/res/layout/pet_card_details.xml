                android:text="Ranasinghe" />

            <ImageButton
                android:id="@+id/PCDEditImageButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/DocID01"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/edit_button" />

            <ImageButton
                android:id="@+id/PCDDeleteImageButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toEndOf="@+id/DocID01"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/delete_button" />
        </TableRow>

        <TableRow
            android:background="#fefac0"
            android:padding="5dp">

            <TextView
