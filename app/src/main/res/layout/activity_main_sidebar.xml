    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavigationBar"
        android:layout_width="400dp"
        android:layout_height="660dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <ImageView
            android:id="@+id/navigationimage"
            android:layout_width="510dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/auth_logo" />

        <Button
            android:id="@+id/navButton1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="180dp"
            android:text="DOCTOR"
            android:textColor="@color/black"
            app:backgroundTint="#D2B48C"
            android:fontFamily="sans-serif-black"
            app:iconTint="#4E0808" />

        <Button
            android:id="@+id/navButton2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="230dp"
            android:text="PET CARD DETAILS"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="280dp"
            android:text="MEDICAL CENTER"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="330dp"
            android:text="VACCINE REPORT"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton5"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="380dp"
            android:text="DETAILS OF PETS"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton6"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="430dp"
            android:text="ACCOUNTS"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton7"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="480dp"
            android:text="BLOGS"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton8"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="530dp"
            android:text="CONTACT US"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#D2B48C" />

        <Button
            android:id="@+id/navButton9"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="580dp"
            android:text="LOGOUT"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#FF0000" />

    </com.google.android.material.navigation.NavigationView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip9"
        android:layout_width="48dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        app:chipBackgroundColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip13"
