            <ImageView
                android:id="@+id/deletebtn2"
                android:layout_width="39dp"
                android:layout_height="26dp"
                app:srcCompat="@drawable/delete_btn" />
        </TableRow>

        <TableRow

            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
